    <link href="../public/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link
      href="../public/vendor/swiper/swiper-bundle.min.css"
      rel="stylesheet"
    />
    <link
      href="../public/vendor/glightbox/css/glightbox.min.css"
      rel="stylesheet"
    />

    <!-- Template Main CSS File -->
    <link href="../public/css/main.css" rel="stylesheet" />

    <style>
      :root {
        --primary-color: #8e4574;
        --primary-hover: #ff7eff;
        --bg-light: #f8f9fa;
        --text-dark: #37423b;
      }

      body {
        background-color: var(--bg-light);
        color: var(--text-dark);
        font-family: "Poppins", sans-serif;
        padding-top: 80px;
      }

      .problem-form {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .form-header {
        text-align: center;
        margin-bottom: 30px;
      }

      .form-header h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 10px;
      }

      .form-header p {
        color: #666;
        font-size: 1.1rem;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-label {
        font-weight: 500;
        color: var(--text-dark);
        margin-bottom: 8px;
      }

      .form-control {
        border: 2px solid #e1e1e1;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
      }

      .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(142, 69, 116, 0.25);
      }

      .form-select {
        border: 2px solid #e1e1e1;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
      }

      .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(142, 69, 116, 0.25);
      }

      textarea.form-control {
        min-height: 150px;
        resize: vertical;
      }

      .file-upload {
        border: 2px dashed #e1e1e1;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .file-upload:hover {
        border-color: var(--primary-color);
        background-color: rgba(142, 69, 116, 0.05);
      }

      .submit-btn {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
      }

      .submit-btn:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
      }

      @media (max-width: 768px) {
        .problem-form {
          padding: 20px;
        }

        .form-header h2 {
          font-size: 1.8rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="container d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center me-auto me-lg-0">
          <img src="../public/img/ui_full.png" alt="" />
        </a>

        <nav id="navbar" class="navbar">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/explore">Challenges</a></li>
            <li><a href="/infra">Infraseek</a></li>
            <li><a href="/hackathon">Hackathon</a></li>
            <li>
              <a href="/profile">
                <img
                  id="avatarImage"
                  width="40"
                  height="40"
                  style="border-radius: 50%"
                  src="<%=user.image%>"
                  alt="Profile"
                />
              </a>
            </li>
          </ul>
        </nav>

        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
      </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="problem-form">
              <div class="form-header">
                <h2>Post a Problem Statement</h2>
                <p>Share your industry challenge with innovative minds</p>
              </div>

              <form
                action="/problem"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-group">
                  <label for="department" class="form-label">Department</label>
                  <select
                    id="department"
                    name="department"
                    class="form-select"
                    required
                  >
                    <option value="Computer Science and Engineering">
                      Computer Science and Engineering
                    </option>
                    <option value="Electronics and Communication Engineering">
                      Electronics and Communication Engineering
                    </option>
                    <option value="Electrical and Electronics Engineering">
                      Electrical and Electronics Engineering
                    </option>
                    <option value="Mechanical Engineering">
                      Mechanical Engineering
                    </option>
                    <option value="Civil Engineering">Civil Engineering</option>
                    <option value="Chemical Engineering">
                      Chemical Engineering
                    </option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="problemStatement" class="form-label"
                    >Problem Title</label
                  >
                  <input
                    type="text"
                    id="problemStatement"
                    name="title"
                    class="form-control"
                    placeholder="Enter a clear, concise title"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="description" class="form-label"
                    >Problem Description</label
                  >
                  <textarea
                    id="description"
                    name="description"
                    class="form-control"
                    placeholder="Describe the problem in detail..."
                    required
                  ></textarea>
                </div>

                <div class="form-group">
                  <label for="file" class="form-label"
                    >Supporting Documents</label
                  >
                  <div class="file-upload">
                    <input
                      type="file"
                      id="file"
                      name="file"
                      class="form-control"
                      required
                    />
                    <p class="text-muted mt-2 mb-0">
                      Upload relevant documents, diagrams, or specifications
                    </p>
                  </div>
                </div>

                <input
                  type="hidden"
                  id="userId"
                  name="userId"
                  value="<%=user.id%>"
                />

                <button type="submit" class="submit-btn">
                  <i class="bi bi-cloud-upload me-2"></i>
                  Submit Problem Statement
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../public/vendor/aos/aos.js"></script>
    <script src="../public/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="../public/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="../public/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="../public/js/main.js"></script>
  </body>
</html>
