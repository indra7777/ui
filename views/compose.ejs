    <!-- new form -->
    <section class="compose-section">
        <div class="compose-container">
            <div class="compose-header">
                <h2>Create a Blog Post</h2>
                <p>Share your thoughts and ideas with the community</p>
            </div>
            <form class="compose-form" action="/blogs/compose" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="image">Image</label>
                    <div class="image-upload-wrapper">
                        <input type="file" class="form-control-file" id="imageInput" name="image" accept="image/*">
                        <img id="imagePreview" class="image-preview">
                    </div>
                </div>
                <div class="form-group">
                    <label for="postTitle">Title</label>
                    <input name="postTitle" type="text" class="form-control" id="postTitle" placeholder="Enter a title">
                </div>
                <div class="form-group">
                    <label for="postBody">Description</label>
                    <textarea name="postBody" class="form-control" id="descriptionInput" rows="3" placeholder="Write your story..."></textarea>
                </div>
                <button type="submit" class="submit-btn">Publish Post</button>
            </form>
        </div>
    </section>


