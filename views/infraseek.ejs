                },
                body: JSON.stringify({
                    product: {
                        name: name,
                        image: 'https://example.com/product.jpg', // replace with actual image URL
                        price: price
                    }
                })
            })
                .then(response => response.json())
                .then(data => {
                    const sessionId = data.id;
                    const stripe = Stripe('pk_test_TYooMQauvdEDq54NiTphI7jx'); // replace with your public key
                    stripe.redirectToCheckout({ sessionId });
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        });
    });
