<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Uncalled Innovators</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../public/css/authentication.css" />
    <!--favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../public/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../public/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../public/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="../public/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="../public/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="section">
      <div class="container">
        <div class="row full-height justify-content-center">
          <div class="col-12 text-center align-self-center py-5">
            <div class="section pb-5 pt-5 pt-sm-2 text-center">
              <h6 class="mb-0 pb-3">
                <span>Sign In</span>
                <span>Sign Up</span>
              </h6>
              <div style="margin-bottom: 40px">
                <input class="checkbox" type="checkbox" id="reg-log"
                name="reg-log" <%= isSignup ? 'checked="checked"' : '' %> />
                <label for="reg-log"></label>
              </div>
              <div class="card-3d-wrap mx-auto" style="margin-top: 20px">
                <div class="card-3d-wrapper">
                  <!-- Login Form -->
                  <div class="card-front">
                    <div class="center-wrap">
                      <form id="login-form" action="/auth/login" method="post">
                        <div class="section text-center">
                          <h4 class="mb-4 pb-3">Sign In</h4>
                          <div class="form-group">
                            <input
                              name="email"
                              type="email"
                              class="form-style"
                              placeholder="Email"
                              required
                            />
                            <i class="input-icon uil uil-at"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              name="password"
                              type="password"
                              class="form-style"
                              placeholder="Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <div class="form-group mt-2">
                            <select name="userType" class="form-style" required>
                              <option value="">Select User Type</option>
                              <option value="seeker">Seeker</option>
                              <option value="verify">Verify Team</option>
                              <option value="industry">Industry</option>
                            </select>
                            <i class="input-icon uil uil-user"></i>
                          </div>
                          <% if (loginError) { %>
                          <div class="error-message text-danger mt-2">
                            <%= loginError %>
                          </div>
                          <% } %>
                          <button
                            type="submit"
                            class="btn btn-primary mt-4 w-100"
                          >
                            Sign In
                          </button>
                          <p class="mb-0 mt-4 text-center">
                            <a href="/forgot-password" class="link"
                              >Forgot Password?</a
                            >
                          </p>
                        </div>
                      </form>
                    </div>
                  </div>
                  <!-- Signup Form -->
                  <div class="card-back">
                    <div class="center-wrap">
                      <form
                        id="signup-form"
                        action="/student/signup"
                        method="post"
                      >
                        <div class="section text-center">
                          <h4 class="mb-4 pb-3">Sign Up</h4>
                          <div class="form-group">
                            <select
                              name="userType"
                              class="form-style"
                              id="userTypeSelect"
                              onchange="toggleFields()"
                              required
                            >
                              <option value="">Select User Type</option>
                              <option value="seeker">Seeker</option>
                              <option value="verify">Verify Team</option>
                              <option value="industry">Industry</option>
                            </select>
                            <i class="input-icon uil uil-user"></i>
                          </div>
                          <% if (typeof registerError !== 'undefined') { %>
                          <div class="alert alert-danger mt-3">
                            <%= registerError %>
                          </div>
                          <% } %>

                          <!-- Student/Seeker Fields -->
                          <div id="seekerFields" style="display: none">
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="name"
                                class="form-style seeker-field"
                                placeholder="Full Name"
                              />
                              <i class="input-icon uil uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="collegeName"
                                class="form-style seeker-field"
                                placeholder="College Name"
                              />
                              <i class="input-icon uil uil-building"></i>
                            </div>
                            <div class="form-group mt-2">
                              <select
                                name="stream"
                                class="form-style seeker-field"
                              >
                                <option value="">Select Stream</option>
                                <option value="Engineering">Engineering</option>
                                <option value="Arts">Arts</option>
                                <option value="Science">Science</option>
                              </select>
                              <i class="input-icon uil uil-book-open"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="text"
                                name="branch"
                                class="form-style seeker-field"
                                placeholder="Branch"
                              />
                              <i class="input-icon uil uil-graduation-cap"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="number"
                                name="currentYear"
                                class="form-style seeker-field"
                                placeholder="Current Year"
                              />
                              <i class="input-icon uil uil-calendar-alt"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                type="number"
                                name="passedOutYear"
                                class="form-style seeker-field"
                                placeholder="Passed Out Year"
                              />
                              <i class="input-icon uil uil-calendar-alt"></i>
                            </div>
                          </div>

                          <!-- Common Fields for All Users -->
                          <div class="form-group mt-2">
                            <input
                              type="email"
                              name="email"
                              class="form-style"
                              placeholder="Email"
                              required
                            />
                            <i class="input-icon uil uil-at"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              type="password"
                              name="password"
                              class="form-style"
                              placeholder="Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              type="tel"
                              name="phone"
                              class="form-style"
                              placeholder="Phone Number"
                              required
                            />
                            <i class="input-icon uil uil-phone"></i>
                          </div>
                          <button
                            class="btn btn-primary mt-4 w-100"
                            type="submit"
                          >
                            Register
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        // Set initial state based on isSignup
        const initialIsSignup = "<%= isSignup %>" === "true";
        if (initialIsSignup) {
          $(".card-front").hide();
          $(".card-back").show();
        } else {
          $(".card-front").show();
          $(".card-back").hide();
        }

        // Handle form switch
        $("#reg-log").on("change", function () {
          const isSignup = $(this).is(":checked");
          if (isSignup) {
            $(".card-front").hide();
            $(".card-back").show();
            window.history.pushState({}, "", "/auth/signup");
          } else {
            $(".card-front").show();
            $(".card-back").hide();
            window.history.pushState({}, "", "/auth/login");
          }
        });

        // Handle signup form user type selection
        $("#userTypeSelect").on("change", function () {
          const userType = $(this).val();
          toggleFields();
          updateFormAction(userType);
        });
      });

      function toggleFields() {
        const userTypeSelect = document.getElementById("userTypeSelect");
        if (!userTypeSelect) return; // Guard clause to prevent errors

        const userType = userTypeSelect.value;
        const seekerFields = document.getElementById("seekerFields");
        const seekerInputs = document.getElementsByClassName("seeker-field");

        if (userType === "seeker") {
          seekerFields.style.display = "block";
          // Make seeker fields required
          for (let input of seekerInputs) {
            input.required = true;
          }
        } else {
          seekerFields.style.display = "none";
          // Remove required attribute from seeker fields
          for (let input of seekerInputs) {
            input.required = false;
            input.value = ""; // Clear values
          }
        }
      }

      function updateFormAction(userType) {
        const form = document.getElementById("signup-form");
        switch (userType) {
          case "seeker":
            form.action = "/student/signup";
            break;
          case "verify":
            form.action = "/verify/signup";
            break;
          case "industry":
            form.action = "/industry/signup";
            break;
        }
      }

      // Initialize fields on page load
      document.addEventListener("DOMContentLoaded", function () {
        const userTypeSelect = document.getElementById("userTypeSelect");
        if (userTypeSelect) {
          toggleFields();
          updateFormAction(userTypeSelect.value);
        }
      });
    </script>
  </body>
</html>
