<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Uncalled Innovators</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../public/css/authentication.css" />
    <!--favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../public/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../public/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../public/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="../public/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="../public/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="section">
      <div class="container">
        <div class="row full-height justify-content-center">
          <div class="col-12 text-center align-self-center py-5">
            <div class="section pb-5 pt-5 pt-sm-2 text-center">
              <h6 class="mb-0 pb-3">
                <span>Log In</span>
                <span>Sign Up</span>
              </h6>
              <div style="margin-bottom: 40px">
                <input class="checkbox" type="checkbox" id="reg-log"
                name="reg-log" <%= isSignup ? 'checked' : '' %> />
                <label for="reg-log"></label>
              </div>
              <div class="card-3d-wrap mx-auto" style="margin-top: 20px">
                <div class="card-3d-wrapper">
                  <!-- Login Form -->
                  <div class="card-front">
                    <div class="center-wrap">
                      <form
                        id="login-method"
                        action="/auth/login"
                        method="post"
                      >
                        <div class="section text-center">
                          <h4 class="mb-4 pb-3">Log In</h4>
                          <div class="form-group">
                            <input
                              name="email"
                              type="email"
                              class="form-style"
                              placeholder="Email"
                              required
                            />
                            <i class="input-icon uil uil-at"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              name="password"
                              type="password"
                              class="form-style"
                              placeholder="Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <div class="form-group mt-2">
                            <select
                              name="login-type"
                              class="form-style"
                              required
                            >
                              <option value="">Select User Type</option>
                              <option value="1">Student</option>
                              <option value="2">Verify Team</option>
                              <option value="3">Industry</option>
                            </select>
                            <i class="input-icon uil uil-user"></i>
                          </div>
                          <% if (loginError) { %>
                          <div class="error-message text-danger mt-2">
                            <%= loginError %>
                          </div>
                          <% } %>
                          <button
                            type="submit"
                            class="btn btn-primary mt-4 w-100"
                          >
                            Login
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                  <!-- Signup Form -->
                  <div class="card-back">
                    <div class="center-wrap">
                      <form
                        id="signup-form"
                        action="/student/signup"
                        method="post"
                      >
                        <div class="section text-center">
                          <h4 class="mb-4 pb-3">Sign Up</h4>
                          <div class="form-group">
                            <select
                              id="userType"
                              name="userType"
                              class="form-style"
                              required
                              onchange="updateFormAction(this.value)"
                            >
                              <option value="student">Student</option>
                              <option value="verify">Verify Team</option>
                              <option value="industry">Industry</option>
                            </select>
                            <i class="input-icon uil uil-user"></i>
                          </div>
                          <% if (typeof registerError !== 'undefined') { %>
                          <div class="alert alert-danger mt-3">
                            <%= registerError %>
                          </div>
                          <% } %>

                          <!-- Student Fields -->
                          <div id="studentFields">
                            <div class="form-group mt-2">
                              <select
                                id="avatar"
                                name="avatar"
                                class="form-select form-style"
                              >
                                <option value="../public/img/seeker/BEAR.png">
                                  Bear
                                </option>
                                <option
                                  value="../public/img/seeker/CIMPANZEE.png"
                                >
                                  Cimpanzee
                                </option>
                                <option
                                  value="../public/img/seeker/ELEPHANT.png"
                                >
                                  Elephant
                                </option>
                                <option value="../public/img/seeker/HIPPO.png">
                                  Hippo
                                </option>
                                <option value="../public/img/seeker/LION.png">
                                  Lion
                                </option>
                                <option
                                  value="../public/img/seeker/OCTOPUS.png"
                                >
                                  Octopus
                                </option>
                                <option value="../public/img/seeker/PANDA.png">
                                  Panda
                                </option>
                                <option value="../public/img/seeker/PIG.png">
                                  Pig
                                </option>
                                <option value="../public/img/seeker/RHINO.png">
                                  Rhino
                                </option>
                                <option value="../public/img/seeker/ZEBRA.png">
                                  Zebra
                                </option>
                              </select>
                              <i class="input-icon uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                name="name"
                                type="text"
                                class="form-style"
                                placeholder="Full Name"
                                required
                              />
                              <i class="input-icon uil uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                name="collegeName"
                                type="text"
                                class="form-style"
                                placeholder="College Name"
                                required
                              />
                              <i class="input-icon uil uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <select
                                name="stream"
                                class="form-select form-style"
                                required
                              >
                                <option value="">Select Stream</option>
                                <option value="B.Tech">B.Tech</option>
                                <option value="M.Tech">M.Tech</option>
                                <option value="Diploma">Diploma</option>
                                <option value="ITI">ITI</option>
                              </select>
                              <i class="input-icon uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <select
                                name="branch"
                                class="form-select form-style"
                                required
                              >
                                <option value="">Select Branch</option>
                                <option value="MECH">MECH</option>
                                <option value="CIVIL">CIVIL</option>
                                <option value="ECE">ECE</option>
                                <option value="EEE">EEE</option>
                                <option value="CSE">CSE</option>
                                <option value="CHE">CHE</option>
                                <option value="Other">Other</option>
                              </select>
                              <i class="input-icon uil-user"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                name="currentYear"
                                type="number"
                                class="form-style"
                                placeholder="Current Year"
                                required
                              />
                              <i class="input-icon uil uil-calendar-alt"></i>
                            </div>
                            <div class="form-group mt-2">
                              <input
                                name="passedOutYear"
                                type="number"
                                class="form-style"
                                placeholder="Pass out Year"
                                required
                              />
                              <i class="input-icon uil uil-calendar-alt"></i>
                            </div>
                          </div>

                          <!-- Common Fields for all user types -->
                          <div class="form-group mt-2">
                            <input
                              name="email"
                              type="email"
                              class="form-style"
                              placeholder="Email"
                              required
                            />
                            <i class="input-icon uil uil-at"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              name="password"
                              type="password"
                              class="form-style"
                              placeholder="Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              name="phone"
                              type="tel"
                              class="form-style"
                              placeholder="Phone Number"
                              required
                            />
                            <i class="input-icon uil uil-phone-alt"></i>
                          </div>
                          <button
                            class="btn btn-primary mt-4 w-100"
                            type="submit"
                          >
                            Register
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        // Handle form switch
        $("#reg-log").on("change", function () {
          const isSignup = $(this).is(":checked");

          // Instead of animation, just toggle display immediately
          if (isSignup) {
            $(".card-front").hide();
            $(".card-back").show();
            window.history.pushState({}, "", "/auth/signup");
          } else {
            $(".card-front").show();
            $(".card-back").hide();
            window.history.pushState({}, "", "/auth/login");
          }
        });

        // Set initial state based on server-side isSignup value
        const initialIsSignup = Boolean("<%= isSignup %>"); // Convert string to boolean
        if (initialIsSignup) {
          $(".card-front").hide();
          $(".card-back").show();
        } else {
          $(".card-front").show();
          $(".card-back").hide();
        }

        // Update form action based on user type selection
        window.updateFormAction = function (userType) {
          const form = document.getElementById("signup-form");
          switch (userType) {
            case "student":
              form.action = "/student/signup";
              break;
            case "verify":
              form.action = "/verify/signup";
              break;
            case "industry":
              form.action = "/industry/signup";
              break;
          }
        };

        // Initialize form action for signup form
        if (document.getElementById("userType")) {
          updateFormAction(document.getElementById("userType").value);
        }
      });
    </script>
  </body>
</html>
