<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Reset Password - Uncalled Innovators</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../public/css/authentication.css" />
  </head>
  <body>
    <div class="section">
      <div class="container">
        <div class="row full-height justify-content-center">
          <div class="col-12 text-center align-self-center py-5">
            <div class="section pb-5 pt-5 pt-sm-2 text-center">
              <div class="card-3d-wrap mx-auto">
                <div class="card-3d-wrapper">
                  <div class="card-front">
                    <div class="center-wrap">
                      <div class="section text-center">
                        <h4 class="mb-4 pb-3">Reset Password</h4>
                        <% if (error) { %>
                        <div
                          class="alert"
                          style="
                            background: rgba(255, 76, 81, 0.1);
                            color: #ff4c51;
                            border: none;
                            border-radius: 4px;
                            padding: 10px;
                          "
                        >
                          <%= error %>
                        </div>
                        <% } %> <% if (success) { %>
                        <div
                          class="alert"
                          style="
                            background: rgba(0, 255, 0, 0.1);
                            color: #00ff00;
                            border: none;
                            border-radius: 4px;
                            padding: 10px;
                          "
                        >
                          <%= success %>
                          <div class="mt-4">
                            <a href="/auth/login" class="btn">Go to Signin</a>
                          </div>
                        </div>
                        <% } else { %>
                        <form action="/reset-password" method="POST">
                          <input
                            type="hidden"
                            name="token"
                            value="<%= token %>"
                          />
                          <div class="form-group">
                            <input
                              type="password"
                              name="password"
                              class="form-style"
                              placeholder="New Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <div class="form-group mt-2">
                            <input
                              type="password"
                              name="confirmPassword"
                              class="form-style"
                              placeholder="Confirm Password"
                              required
                            />
                            <i class="input-icon uil uil-lock-alt"></i>
                          </div>
                          <button type="submit" class="btn mt-4">
                            Reset Password
                          </button>
                        </form>
                        <% } %> <% if (!success) { %>
                        <p class="mb-0 mt-4 text-center">
                          <a href="/auth/login" class="link">Back to Signin</a>
                        </p>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.querySelector("form")?.addEventListener("submit", function (e) {
        const password = document.getElementById("password").value;
        const confirmPassword =
          document.getElementById("confirmPassword").value;

        if (password !== confirmPassword) {
          e.preventDefault();
          alert("Passwords do not match!");
        }
      });
    </script>
  </body>
</html>
