    <style>
      .btn-view-details {
        font-family: "Poppins", sans-serif;
        text-transform: uppercase;
        font-weight: 500;
        font-size: 14px;
        letter-spacing: 1px;
        display: inline-block;
        padding: 10px 28px;
        border-radius: 5px;
        transition: 0.5s;
        border: 2px solid #8e4574;
        color: #8e4574;
        text-decoration: none;
        margin-top: 15px;
        background: transparent;
        cursor: pointer;
      }

      .btn-view-details:hover {
        background: #8e4574;
        color: #fff;
        text-decoration: none;
      }

      .course-item {
        border-radius: 15px;
        border: 1px solid #eef0ef;
        margin-bottom: 30px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        padding: 20px;
      }

      .course-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .logo-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
      }

      .image-title h2 {
        color: #37423b;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 15px;
      }

      .specifications h4 {
        color: #5a6c60;
        font-size: 18px;
        margin-bottom: 10px;
      }

      .specifications ul {
        color: #5a6c60;
        font-size: 15px;
        padding-left: 20px;
      }

      .image-description p {
        color: #5a6c60;
        font-size: 15px;
        line-height: 1.6;
        margin: 15px 0;
      }
    </style>
  </head>

