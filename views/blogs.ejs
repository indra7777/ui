    <!-- Add floating compose button -->
    <a href="/blogs/compose" class="floating-compose-btn" title="Write a Blog">
      <i class="bi bi-pencil-square"></i>
      <span class="compose-text">Compose</span>
    </a>

    <div class="container" style="padding-top: 7%">
      <h1>Home</h1>
      <p><%= startingContent %></p>

      <% posts.forEach(post=> { %>

      <div class="blog-card alt">
        <div class="description">
          <h1><%= post.title %></h1>
          <img src="/public/img/about-2.jpg" alt="image" />
          <!-- <h2>Java is not the same as JavaScript</h2> -->
          <p><%= post.content.substring(0,100)+"..." %></p>
          <p class="read-more">
            <a href="/blogs/posts/<%= post._id %>">Read More</a>
          </p>
        </div>
      </div>

      <% }); %>
