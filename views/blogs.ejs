    <div class="header">
      <img class="logo" src="../public/img/logo.jpg" alt="Your Logo" />
      <div class="container">
        <div class="rounded-container">
          <a href="/blogs/ours">ours</a>
          <a href="/blogs/yours">yours</a>
        </div>
        <div class="container">
          <div class="strip" id="hover-strip">
            <div class="dots-container">
              <div class="dot"></div>
              <div class="dot"></div>
              <div class="dot"></div>
            </div>
          </div>
          <div class="vertical-container">
            <div class="user-profile">
              <img src="<%=user.image%>" alt="User Avatar" class="avatar" />
              <p class="user-name">User</p>
            </div>
            <div class="spacer"></div>
            <nav id="navbar" class="navbar">
              <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/explore">Challenges</a></li>
                <li><a href="/infra">Infraseek</a></li>
                <li><a href="/hackathon">Hackathon</a></li>
                <!-- <li><a href="/blogs">Blogs</a></li> -->
                <li>
                  <a href="/profile">
                    <img
                      id="avatarImage"
                      width="10%"
                      height="8%"
                      src="<%=user.image%>"
                      alt="Profile"
                    />
                  </a>
                </li>
              </ul>
            </nav>
            <a href="/logout">Logout</a>
            <div class="image-link bottom-images">
              <a
                href="https://www.linkedin.com/company/uncalled-innovators/"
                target="_blank"
                ><img src="../public/Icons/linkedin.png" alt="LinkedIn"
              /></a>
              <a
                href="https://www.instagram.com/uncalled_innovators?igsh=MXU1bDBsb3N5amdsdQ=="
                target="_blank"
                ><img src="../public/Icons/instagram.png" alt="Instagram"
              /></a>
              <a href="https://x.com/UncalledInn" target="_blank"
                ><img src="../public/Icons/twitter.png" alt="Twitter"
              /></a>
            </div>
          </div>
        </div>
      </div>
