  <body
    data-aos-easing="ease-in-out"
    data-aos-duration="1000"
    data-aos-delay="0"
  >
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="container d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center me-auto me-lg-0">
          <img src="../public/img/ui_full.png" alt="" />
        </a>

        <nav id="navbar" class="navbar">
          <ul class="d-flex align-items-center justify-content-center w-100">
            <li><a href="/">Home</a></li>
            <li><a href="/explore">Challenges</a></li>
            <li><a href="/infra">Infraseek</a></li>
            <li><a href="/hackathon">Hackathon</a></li>
            <li><a href="/blogs">Blogs</a></li>
            <li>
              <a href="/profile">
                <img
                  id="avatarImage"
                  width="40"
                  height="40"
                  style="border-radius: 50%"
                  src="<%=user.image%>"
                  alt="Profile"
                />
              </a>
            </li>
          </ul>
        </nav>

        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
      </div>
    </header>

    <!-- Floating compose button -->
    <a href="/blogs/compose" class="floating-compose-btn" title="Write a Blog">
      <i class="bi bi-pencil-square"></i>
      <span class="compose-text">Compose</span>
    </a>

    <section class="blog-section">
      <div class="container">
        <div class="blog-header">
          <h2>Latest Stories</h2>
          <p>Explore our collection of insights, innovations, and ideas</p>
        </div>

        <div class="row">
          <% posts.forEach(post => { %>
          <div class="col-lg-4 col-md-6">
            <div class="blog-card">
              <% if (post.image && post.image.trim() !== '') { %>
              <img
                src="<%= post.image %>"
                alt="<%= post.title %>"
                class="blog-image"
              />
              <% } %>
              <div class="blog-content">
                <h3 class="blog-title"><%= post.title %></h3>

                <div class="blog-metadata">
                  <span
                    ><i class="bi bi-calendar"></i> <%= new
                    Date(post.createdAt).toLocaleDateString() %></span
                  >
                </div>

                <p class="blog-excerpt">
                  <%= post.content.substring(0, 150) %>...
                </p>

                <a href="/blogs/posts/<%= post._id %>" class="blog-read-more"
                  >Read More</a
                >
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- End #main -->

    <!-- Keep only essential scripts -->
    <script src="../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../public/vendor/aos/aos.js"></script>
    <script src="../public/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="../public/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="../public/js/main.js"></script>
  </body>
